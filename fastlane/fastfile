lane :funky do
    scan(
        code_coverage: true,
        open_report: true
    )
    if git_branch() == "develop"
        print "DEVELOP BRANCH\n"
    elsif git_branch() == "master"
        print "MASTER BRANCH\n"
        funky_deploy
    end
end

lane :funky_deploy do 
    pod_lib_lint
    pod_push
    print "[!!] deploy\n"
end